{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [".react-router", "types.d.ts", "tsc", "build"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useAriaPropsForRole": "off",
				"useButtonType": "off",
				"useKeyWithClickEvents": "off",
				"noSvgWithoutTitle": "off",
				"noLabelWithoutControl": "off",
				"noInteractiveElementToNoninteractiveRole": "off"
			},
			"complexity": {
				"noForEach": "off",
				"useLiteralKeys": {
					"level": "error",
					"fix": "safe"
				}
			},
			"correctness": {
				"useExhaustiveDependencies": "off",
				"noUnusedImports": {
					"level": "warn",
					"fix": "safe"
				},
				"noUnusedVariables": {
					"level": "warn",
					"fix": "none"
				}
			},
			"nursery": {
				"useSortedClasses": {
					"options": {
						"attributes": [],
						"functions": ["cx", "twMerge"]
					},
					"level": "warn",
					"fix": "safe"
				}
			},
			"performance": {
				"noAccumulatingSpread": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			},
			"style": {
				"noUnusedTemplateLiteral": {
					"level": "error",
					"fix": "safe"
				},
				"useTemplate": {
					"level": "error",
					"fix": "safe"
				},
				"useSelfClosingElements": {
					"level": "error",
					"fix": "safe"
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"trailingCommas": "es5"
		}
	}
}
